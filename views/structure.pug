doctype html
html
    head
        block head-meta
            meta(charset='utf-8')
            meta(name='viewport', content='width=device-width, initial-scale=1.0')
            meta(http-equiv='X-UA-Compatible', content='IE=edge')

            title !{title}
        block fonts
            //script(defer='', src='https://use.fontawesome.com/releases/v5.0.6/js/all.js')

        block stylesheets
            link(rel='stylesheet', href='css/bootstrap.css')
            link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.0.9/css/all.css" integrity="sha384-5SOiIsAziJl6AWe0HWRKTXlfcSHKmYV4RBF18PPJ173Kzn7jzMyFuTtk8JA7QQG1" crossorigin="anonymous")
            link(rel='stylesheet', href='css/theme.css')
            link(rel='stylesheet', href='css/login.css')
            //link(rel='stylesheet', href='css/header.css')
    body
        block navigation
            .login-container
                a.btn.login-button#loginButton(href='#', role='button', data-toggle='modal', data-target='#register-modal')
                    span.fa.fa-fw.fa-user-plus
                    |  Register
                a.btn.login-button#registerButton(href='#', role='button', data-toggle='modal', data-target='#login-modal')
                    span.fa.fa-fw.fa-sign-in-alt
                    |  Login
            .header
                header#main-header
                    nav.navbar.navbar-default.navbar-fixed-top
                        .container
                            .navbar-header
                                button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
                                    span.icon-bar
                                    span.icon-bar
                                    span.icon-bar
                                a(href="/")
                                    img.menu-logo(src="/img/twp-logo.png")
                            #myNavbar.collapse.navbar-collapse
                                ul.nav.navbar-nav.navbar-right
                                    // Life Planning Drop-Down
                                    li.dropdown.life
                                        a.dropdown-toggle.nav-link(data-toggle='dropdown', href='#')
                                            i.fas.fa-paste.fa-fw
                                            |  Life Planning &nbsp;
                                            span.fas.fa-angle-down
                                        ul.dropdown-menu
                                            li
                                                a(href="{{ 'storage'|page }}") Storage
                                            li
                                                a(href="{{ 'trusts'|page }}") Trusts
                                            li
                                                a(href="{{ 'inheritance'|page }}") Inheritance
                                            li
                                                a(href="{{ 'faq'|page }}") FAQs
                                    // Personal Services Drop-Down
                                    li.dropdown.personal
                                        a.dropdown-toggle.nav-link(data-toggle='dropdown', href='#')
                                            i.fa.fa-user.fa-fw
                                            |  Personal Services &nbsp;
                                            span.fas.fa-angle-down
                                        ul.dropdown-menu
                                            li
                                                a(href="{{ 'probate'|page }}") Probate
                                            li
                                                a(href="{{ 'careers'|page }}") Careers
                                            li
                                                a(href="{{ 'blog'|page }}") News / Blog
                                            li
                                                a(href="{{ 'contact'|page }}") Contact Us
                                    // Online Services Drop-Down
                                    li.dropdown.online
                                        a.dropdown-toggle.nav-link(data-toggle='dropdown', href='#')
                                            i.fa.fa-mouse-pointer.fa-fw
                                            |  Online Services &nbsp;
                                            span.fas.fa-angle-down
                                        ul.dropdown-menu
                                            li
                                                a(href="/wills") Wills
                                            li
                                                a(href="{{ 'trusts'|page }}") Trusts
                                            li
                                                a(href="{{ 'powerofattorney'|page }}") Lasting Powers of Attorney
                                            li
                                                a(href="{{ 'funeral'|page }}") Funeral Plans
                                    // News
                                    li.news
                                        a.nav-link(href="{{ 'blog'|page }}")
                                            i.far.fa-newspaper.fa-fw
                                            |  News
        block body-content
        block login
            #login-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
                .modal-dialog
                    .modal-content
                        .modal-header(align='center')
                            img.img_logo.img-circle(src='img/willpic1.jpeg')
                            button.close(type='button', data-dismiss='modal', aria-label='Close')
                                span.fas.fa-fw.fa-times(aria-hidden='true')
                        #div-forms
                            form#login-form(action='/authenticate', method='POST')
                                .modal-body
                                    #div-login-msg
                                        #icon-login-msg.fas.fa-fw.fa-angle-right
                                        span#text-login-msg  Welcome.
                                    input#login-username.username.form-control(type='text', name='username', placeholder='Username' required)
                                    input.password.form-control(type='password', name='password', placeholder='Password' required)
                                .modal-footer
                                    div
                                        button.btn.btn-primary.btn-lg.btn-block.login(type='submit')
                                            i.fas.fa-fw.fa-sign-in-alt
                                            |  Log In
                                    div
                                        button#login_lost_btn.btn.btn-link(type="button") Lost Password?
                            form#lost-form(style='display:none;')
                                .modal-body
                                    #div-lost-msg
                                        #icon-lost-msg.fas.fa-fw.fa-angle-right
                                        span#text-lost-msg Whoops! Please change your password.
                                    input.form-control#lostPasswordUsername(type="text" name="username" placeholder="Username" required)
                                    input.form-control#lostPasswordOld(type="password" name="old" placeholder="Current Password" required)
                                    input.form-control#lostPasswordNew(type="password" name="new" placeholder="New Password" required)
                                    input.form-control#lostPasswordConfirm(type="password" name="confirm" placeholder="Confirm Password" required)
                                    button#submit_handle(type="submit" style="display: none")
                                    p#lostPasswordError
                                    p#lostPasswordSuccess
                                .modal-footer
                                    div
                                        button#lostPassword.btn.btn-primary.btn-lg.btn-block(type='button') Submit
                                        button#lostPasswordResponseMessage.btn.btn-lg.btn-block(type="button")
                                    div
                                        button#lost_login_btn.btn.btn-link(type='button')
                                            i.fas.fa-fw.fa-sign-in-alt
                                            |  Log In
                                        br
            #register-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true', style='display: none;')
                .modal-dialog
                    .modal-content
                        .modal-header(align='center')
                            img.img_logo.img-circle(src='img/willpic1.jpeg')
                            button.close(type='button', data-dismiss='modal', aria-label='Close')
                                span.fas.fa-times.fa-fw(aria-hidden='true')
                        #div-register-form
                            form(action='/register', method='POST')
                                .modal-body
                                    #div-register-msg
                                        #icon-register-msg.fas.fa-fw.fa-angle-right
                                        span#text-register-msg Register
                                    input.username.form-control(type='text', name='username', placeholder='Username' required)
                                    input.email.form-control(type='text', name='email', placeholder='Email' required)
                                    input.password.form-control(type='password', name='password', placeholder='Password' required)
                                    input.confirm.form-control(type='password', name='confirm', placeholder='Confirm Password' required)
                                .modal-footer
                                    div
                                        button.btn.btn-primary.btn-lg.btn-block.register-user(type='submit')
                                            i.fas.fa-fw.fa-user-plus
                                            |  Register
