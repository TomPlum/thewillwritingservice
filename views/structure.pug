                        .col-md-4
                            h3
                                i.fas.fa-pencil-alt
                                |  Services
                            ul.unstyled
                                li
                                    a.footer-links(href="/wills") Wills
                                li
                                    a.footer-links(href="{{ 'funeral'|page }}") Funeral Plans
                                li
                                    a.footer-links(href="{{ 'inheritance'|page }}") Inheritance Tax
                                li
                                    a.footer-links(href="{{ 'probate'|page}}") Probate
                                li
                                    a.footer-links(href="{{ 'storage'|page }}") Storage
                                li
                                    a.footer-links(href="{{ 'trusts'|page }}") Trusts
                        .col-md-4
                            h3
                                i.fas.fa-info-circle
                                |  About Us
                            ul.unstyled
                                li
                                    a.footer-links(href="{{ 'history'|page }}") Company History
                                li
                                    a.footer-links(href="{{ 'glossary'|page }}") Glossary of Terms
                                li
                                    a.footer-links(href="{{ 'trivia'|page }}") Trivia
                                li
