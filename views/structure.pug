        script(src="js/custom.js")
        script(src="js/login.js")
        script(src="js/app.js")
        script(type="text/javascript").
            let loggedIn = "!{loggedIn}";

            if(loggedIn === "true") {
                $("#registerButton").css("display", "none");
                $("#loginButton").html("!{username}").prop("href", "/profile").removeAttr("data-toggle").removeAttr("data-target");
                $(".login-container").append("<a id='logoutButton' href='/logout' role='button' class='btn logout-button'><span class='fas fa-fw fa-sign-out-alt'></span> Logout</a>");
            }
